{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ffffff",
    "activityBar.background": "#ffffff",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#df9f9f",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#ffffff",
    "statusBar.background": "#eaeaea",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#d0d0d0",
    "statusBarItem.remoteBackground": "#eaeaea",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#eaeaea",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#eaeaea99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#eaeaea",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": ["javascript", "javascriptreact"],
  "prettier.enable": true, // si tienes Prettier instalada
  "files.autoSave": "off" // recomendado para ver si se formatea al guardar manual
}
